{
  "name": "mern-testing-assignment",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "install-all": "npm --prefix client install && npm --prefix server install",
    "test": "jest",
    "test:unit": "jest --selectProjects=client,server --coverage",
    "test:integration": "jest --selectProjects=server --testPathPattern=server/tests/integration",
    "start:server": "node server/src/index.js",
    "test:e2e": "start-server-and-test start:server http://localhost:4000 \"cypress run\""
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.7",
    "babel-jest": "^29.7.0",
    "cypress": "^12.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "start-server-and-test": "^2.0.3"
  }
}
